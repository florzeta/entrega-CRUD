<div class="container" style="margin-top: 50px;">
    {{!--fila 1--}}
    <div class="row">
        <p class="text-end">Hola {{usuario}} ! <a class="btn btn-danger" href="/admin/login/logout">Cerrar
                sesion<i class="fas fa-sign-out-alt"></i></a></p>
    </div>
    {{!--fin fila 1--}}
    {{!--fila 2--}}
    <div class="row">
        <div class="col-7">
            <h3>Listado de publicaciones</h3>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-sucess" href="/admin/publicaciones/agregar"><i class="fa fa-plus"
                    aria-hidden="true"></i>Nuevo</a>
        </div>
    </div>
    {{!--fila 3--}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table dark">
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>titulo</td>
                        <td class="text-end">
                            <a class="btn btn-secondary" href="/admin/publicaciones/modificar/{{id}}"><i
                                    class="fa fa-pencil" aria-hidden="true"></i></a>
                            <a class="btn btn-secondary" href="/admin/publicaciones/eliminar/{{id}}"><i
                                    class="fa fa-trash" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
{{!--fin fila 3--}}
<tbody>
    {{#each publicaciones}}
    <tr>
        <th scope="row">{{id}}</th>
        <td>{{titulo}}</td>
        <td class="text-center">
            <a href="#" title="Editar" class="btn btn-sm btn-secondary">
                <i class="fa fa-pencil"></i></a>
            <a href="#" title="Eliminar" class="btn btn-sm btn-secondary">
                <i class="fa fa-trash"></i></a>
        </td>
    </tr>
    {{/each}}
</tbody>