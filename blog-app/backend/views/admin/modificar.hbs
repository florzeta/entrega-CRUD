<div class="container" style="margin:50px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar la publicacion: {{publicacion.id_publicacion}}</h4>
            <form method="post" action="/admin/publicaciones/modificar" enctype="multipart/form-data">
                <input type="hidden" value="{{publicacion.id_publicacion}}" name="id">
                <div class="form-group">
                    <input type="text" placeholder="Titulo" class="form-control" value="{{publicacion.titulo}}"
                        class="form-control" name="titulo">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="subtitulo" value="{{publicacion.subtitulo}}">
                </div>
                <div class="form-group">
                    <p>
                    <label>Imagen: <input type="file" class="form-control" name="imagen" id="imagen" /></label>
                    </p>
                    <p>
                        <label><input type="checkbox" name="img_delete" id="img_delete" value="1">Eliminar imagen actual?</label><input type="hidden" name="img_original" value="{{publicacion.img_id}}">
                    </p>
                </div>
                <div class="form-group">
                    <label for="">Cuerpo</label>
                    <textarea placeholder="cuerpo" class="form-control" name="cuerpo">{{publicacion.cuerpo}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
            <h5>{{message}}</h5>
            {{/if}}
        </div>
    </div>
</div>